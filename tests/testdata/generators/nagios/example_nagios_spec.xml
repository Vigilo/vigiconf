<?xml version="1.0"?>
<hosts>
<host name="example-nagios-spec.xml" address="192.168.1.1" ventilation="Servers">
    <class>linux</class>
    <class>ucd</class>
    <template>linux</template>
    <attribute name="cpulist">2</attribute>
    <test name="Interface">
        <arg name="label">eth0</arg>
        <arg name="ifname">eth0</arg>
        <arg name="warn">10,20</arg>
        <arg name="crit">30,40</arg>
        <nagios>
            <directive name="max_check_attempts">6</directive>
            <directive name="check_interval">11</directive>
            <directive name="retry_interval">2</directive>
        </nagios>
    </test>
    <test name="Interface">
        <arg name="label">eth1</arg>
        <arg name="ifname">eth1</arg>
    </test>
    <test name="Metro">
        <arg name="servicename">Traffic in eth1</arg>
        <arg name="metroname">ineth1</arg>
        <arg name="warn">10</arg>
        <arg name="crit">20</arg>
    </test>
    <test name="UpTime"/>

    <nagios>
        <directive name="max_check_attempts">5</directive>
        <directive name="check_interval">10</directive>
        <directive name="retry_interval">1</directive>
    </nagios>

    <tag service="UpTime" name="security">1</tag>
    <tag service="Host" name="important">2</tag>
    <trap service="test.add_trap" key="test.name">test.label</trap>
    <group>Linux servers</group>
</host>
</hosts>
