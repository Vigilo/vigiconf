<?xml version="1.0"?>
<hosts>
<host name="localhost" address="127.0.0.1" ventilation="P-F">
    <class>linux</class>
    <class>ucd</class>
    <attribute name="cpulist">2</attribute>
    <test name="Interface">
        <arg name="label">eth0</arg>
        <arg name="ifname">eth0</arg>
        <arg name="warn">15,25</arg>
        <arg name="crit">35,45</arg>
    </test>
    <test name="TCPConn">
        <arg name="warn">50</arg>
        <arg name="crit">55</arg>
    </test>
    <group>Linux servers</group>
    <weight>42</weight>
    <template>linux</template>
</host>
</hosts>
